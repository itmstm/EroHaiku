<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 <TextView 
        android:id="@+id/ku_frag_ue_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="left"
        android:textSize="40sp"
        android:typeface="normal"
        android:textStyle="bold"
        android:background="@color/KuUeColor"
        android:text="@string/ku_frag_mesg" />
    
    <TextView 
        android:id="@+id/ku_frag_naka_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="40sp"
        android:typeface="normal"
        android:textStyle="bold"
        android:background="@color/KuNakaColor"
        android:text="@string/ku_frag_mesg" />
    
    <TextView 
        android:id="@+id/ku_frag_shita_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="right"
        android:textSize="40sp"
        android:typeface="normal"
        android:textStyle="bold"
        android:background="@color/KuShitaColor"
        android:text="@string/ku_frag_mesg" />
    
</LinearLayout>